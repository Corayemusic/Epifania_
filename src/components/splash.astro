---
import { Icon } from "astro-icon/components";
import logomark1 from "~/assets/logomark-1.svg";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
import GitHubCorner from "./github-corner.astro";
---

<section class="relative h-full bg-black">
  <Starfield />
  <GitHubCorner />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h3
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <Icon name="logomark" class="size-20 text-white md:size-32" />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-4xl md:text-6xl"
      >
        Conecta
        <br /> con tu
        <br /> humanidad.
      </div>
    </h3>
    <div
      id="astronaut"
      class="relative w-1/3 max-w-xs self-start sm:justify-self-start rotate-12 translate-x-16 -translate-y-8"
    >
      <img
        class="h-full w-full object-cover"
        src={logomark1.src}
        alt="Logomark principal"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #astronaut {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      animation: none !important;
    }

    :global(#starfield) {
      display: none !important;
    }

    #splash-bg-fallback {
      display: block !important;
    }
  }
</style>
