---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import ShowcaseCard from "~/components/showcase-card.astro";
import PsicodramaSection from '~/components/PsicodramaSection.astro';
import TestimonialSection from "~/components/TestimonialSection.astro";
import TestimonialSection2 from "~/components/TestimonialSection2.astro";
import TestimonialSection3 from "~/components/TestimonialSection3.astro";
import TestimonialSection4 from "~/components/TestimonialSection4.astro";
import PsicodramaPedagogico from '~/components/Psicodramapedagogico.astro';
import PasocodramaOrganizacional from '~/components/pasocodrama-organizacional.astro';
import Sociopsicodrama from '~/components/sociopsicodrama.astro';




const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---

<PsicodramaSection />
<TestimonialSection />
<PsicodramaPedagogico />
<TestimonialSection2 />
<PasocodramaOrganizacional />
<TestimonialSection3 />
<Sociopsicodrama />
<TestimonialSection4 />
<ContentSection title="Videos" id="showcase">
  <Fragment slot="lead">
    Hablamos sobre <span class="text-primary">psicodrama</span>{" "}
    <span class="text-primary"></span> e inteligencia{" "}
    <span class="text-primary">espiritual</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.map((site) => <ShowcaseCard site={site} />)}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://www.youtube.com/@epifaniapsicodrama/videos/">
        ...y mÃ¡s &rarr;
      </a>
    </p>
  </div>
</ContentSection>
